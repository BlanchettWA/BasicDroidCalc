<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="tk.wablanchett.calculator_blanchett.MainActivity">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowOrderPreserved="false"
        android:useDefaultMargins="false"
        android:verticalScrollbarPosition="left"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <TextView
            android:text="Awaiting Input..."
            android:layout_width="378dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_row= "0"
            android:layout_column="0"
            android:layout_columnSpan="5"
            android:textSize="24sp"
            android:typeface="monospace"
            android:fontFamily="monospace"
            android:textAlignment="center" />

        <TextView
            android:text="Editing first variable..."
            android:layout_width="374dp"
            android:layout_height="wrap_content"
            android:id="@+id/statusBox"
            android:typeface="monospace"
            android:fontFamily="monospace"
            android:layout_row= "1"
            android:layout_column="0"
            android:layout_columnSpan="5"
            android:textAlignment="center"
            android:textSize="10sp" />

        <Button
            android:text="C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cButton"
            android:layout_row="0"
            android:layout_column="5" />

        <Button
            android:text="CE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ceButton"
            android:layout_row="0"
            android:layout_column="6" />

        <Button
            android:text="/"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/divideButton"
            android:layout_row="1"
            android:layout_column="5" />

        <Button
            android:text="*"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/multiplyButton"
            android:layout_row="1"
            android:layout_column="6" />

        <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/minusButton"
            android:layout_row="2"
            android:layout_column="5"/>

        <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addButton"
            android:layout_row="2"
            android:layout_column="6"
            />


        <Button
            android:text="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sevenButton"
            android:layout_row="2"
            android:layout_column="2" />

        <Button
            android:text="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/eightButton"
            android:layout_row="2"
            android:layout_column="1" />


        <Button
            android:text="9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nineButton"
            android:layout_row="2"
            android:layout_column="0" />

        <Button
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fourButton"
            android:layout_row="3"
            android:layout_column="1" />

        <Button
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fiveButton"
            android:layout_row="3"
            android:layout_column="0" />

        <Button
            android:text="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sixButton"
            android:layout_row="2"
            android:layout_column="3" />

        <Button
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/threeButton"
            android:layout_row="3"
            android:layout_column="2" />

        <Button
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/twoButton"
            android:layout_row="3"
            android:layout_column="3" />

        <Button
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/oneButton"
            android:layout_row="4"
            android:layout_column="0" />

        <Button
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/zeroButton"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_columnSpan="2"/>


        <Button
            android:text="."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/decimalButton"
            android:layout_row="4"
            android:layout_column="3" />

        <Button
            android:text="="
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/equalsButton"
            android:layout_row="3"
            android:layout_column="5"
            />




    </GridLayout>

</RelativeLayout>

